<h1>Rates</h1>
<p> Use this page to get an understanding of how much others in the area have paid </p>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Port Location</th>
      <th scope="col">Dray Location</th>
      <th scope="col">Price</th>
      <th scope="col">Comment</th>
      <th scope="col">View</th>
    </tr>
  </thead>
  <tbody>
  <% @rates.each do |rate| %>
      <tr>
        <td><%= rate.date.to_date %></td>
        <td><%= rate.startCity %></td>
        <td><%= rate.endCity %></td>
        <td>$<%= rate.price %></td>
        <td><%= rate.comment %></td>
        <td><%= link_to 'View Details', rate %></td>
        <td><%= link_to 'Edit', edit_rate_path(rate) %></td>
        <td><%= link_to 'Destroy', rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h3>Just completed a trip? Add how much it cost.</h3>
<button>
  <%= link_to 'New Rate', new_rate_path %>
</button>
